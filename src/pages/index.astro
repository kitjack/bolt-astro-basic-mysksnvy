---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="min-h-screen">
    {/* Hero Section */}
    <div class="relative overflow-hidden">
      {/* Background Elements */}
      <div class="absolute inset-0 bg-gradient-to-b from-gray-50/80 to-white/20 pointer-events-none"></div>
      <div class="absolute inset-0">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-astro-blue/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl"></div>
      </div>

      <div class="container relative mx-auto px-4 py-24 md:py-32">
        <div class="max-w-4xl mx-auto">
          {/* Main Content */}
          <div class="text-center mb-16">
            <div class="inline-block animate-float">
              <div class="flex items-center gap-2 text-sm bg-white border border-gray-200 rounded-full pl-2 pr-4 py-1 mb-8 text-gray-600">
                <span class="flex h-6 w-6 items-center justify-center rounded-full bg-astro-blue/10 text-astro-blue">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </span>
                <span>100% Free Forever</span>
              </div>
            </div>

            <h1 class="text-6xl md:text-7xl font-bold mb-8 leading-tight">
              <span class="text-gray-900 inline-block">Unlimited words.</span><br/>
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-orange-500 to-orange-600 inline-block">100% Free AI tools</span>
            </h1>
            <p class="text-xl text-gray-600 mb-4 max-w-2xl mx-auto">
              Break free from word limits, subscriptions, and restrictions.
            </p>
            <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
              Access powerful AI tools with no constraints, forever.
            </p>

            {/* Search Bar */}
            <div class="max-w-2xl mx-auto mb-12 relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-astro-blue to-orange-500 rounded-xl blur-lg opacity-30 group-hover:opacity-40 transition-opacity duration-300"></div>
              <div class="relative">
                <input 
                  type="text" 
                  placeholder="Search AI tools..." 
                  class="w-full p-4 pl-12 bg-white border border-gray-200 rounded-xl focus:border-astro-blue focus:ring-2 focus:ring-astro-blue/20 transition shadow-sm"
                />
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-4 top-1/2 -translate-y-1/2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <button class="absolute right-2 top-1/2 -translate-y-1/2 px-6 py-2 bg-gradient-to-r from-astro-blue to-astro-blue/80 text-white rounded-lg hover:opacity-90 transition shadow-sm">
                  Search
                </button>
              </div>
            </div>

            {/* Features */}
            <div class="flex flex-wrap justify-center gap-6">
              {['No word limits', 'No credit card', 'No registration required', 'Free forever'].map((feature) => (
                <div class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-full shadow-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-astro-blue" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Tools Section */}
    <div class="bg-gray-50 py-24">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Popular Tools</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {/* Domain Generator Card */}
          <a href="/tools/domain-generator" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-astro-blue/5 to-orange-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-gradient-to-br from-astro-blue to-orange-500 rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-astro-blue transition-colors duration-300">Domain Generator</h3>
                  <p class="text-gray-600">Generate creative and available domain names for your business using AI. Get instant suggestions that match your brand.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-astro-blue">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>

          {/* YouTube Description Generator Card */}
          <a href="/tools/youtube-description" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-astro-blue/5 to-orange-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-red-500 transition-colors duration-300">YouTube Description Generator</h3>
                  <p class="text-gray-600">Create engaging, SEO-optimized YouTube video descriptions with AI. Boost your video's visibility and engagement.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-red-500">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>

          {/* Instagram Caption Generator Card */}
          <a href="/tools/instagram-caption" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-pink-500/5 to-orange-400/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-gradient-to-br from-pink-500 via-pink-600 to-orange-400 rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-pink-500 transition-colors duration-300">Instagram Caption Generator</h3>
                  <p class="text-gray-600">Create engaging Instagram captions that capture attention and drive engagement. Generate multiple variations with different tones.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-pink-500">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>

          {/* LinkedIn Post Generator Card */}
          <a href="/tools/linkedin-post" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-blue-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-blue-500 transition-colors duration-300">LinkedIn Post Generator</h3>
                  <p class="text-gray-600">Create professional and engaging LinkedIn posts that showcase your expertise and drive meaningful engagement.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-blue-500">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>

          {/* Twitter Thread Generator Card */}
          <a href="/tools/twitter-thread" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-sky-500/5 to-sky-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-gradient-to-br from-sky-500 to-sky-600 rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-sky-500 transition-colors duration-300">Twitter Thread Generator</h3>
                  <p class="text-gray-600">Create engaging Twitter threads that captivate your audience. Generate multiple variations with customizable options.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-sky-500">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>

          {/* Facebook Post Generator Card */}
          <a href="/tools/facebook-post" class="group">
            <div class="relative bg-white rounded-2xl p-6 transition duration-300 h-full overflow-hidden border border-gray-100">
              {/* Gradient Background Effect */}
              <div class="absolute inset-0 bg-gradient-to-br from-facebook/5 to-facebook/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              {/* Card Content */}
              <div class="relative">
                {/* Icon */}
                <div class="mb-6 relative">
                  <div class="w-14 h-14 bg-facebook rounded-2xl flex items-center justify-center text-white transform group-hover:scale-110 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                  </div>
                </div>

                {/* Content */}
                <div class="space-y-4">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-facebook transition-colors duration-300">Facebook Post Generator</h3>
                  <p class="text-gray-600">Create engaging Facebook posts that drive engagement and spark conversations. Generate multiple variations with different tones.</p>
                </div>

                {/* Footer */}
                <div class="mt-6 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-facebook">
                    <span class="text-sm font-medium">Try it now</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                  <span class="text-xs text-gray-400">Free</span>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>